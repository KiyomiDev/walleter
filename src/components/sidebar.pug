aside.sidebar
  .head
    <i class="fa-solid fa-bars menu__icon"></i>
    a(href='/' class="img hide")
      img.nav__logo(src='static/images/logo.png' alt='walleter logo')
  .wrapper
    ul(class="sidebar__list")
      li.item.active: a(href="dashboard.html" class="link")
        <i class="fa-solid fa-gauge icon"></i> 
        span.text Dashboard
      li.item: a(href="accounts.html" class="link") 
        <i class="fa-solid fa-wallet icon"></i> 
        span.text Accounts
      li.item: a(href="records.html" class="link") 
        <i class="fa-solid fa-clock-rotate-left icon"></i> 
        span.text Records
      li.item: a(href="goals.html" class="link") 
        <i class="fa-solid fa-bullseye icon"></i> 
        span.text Goals
      li.item: a(href="profile.html" class="link") 
        <i class="fa-solid fa-user icon"></i> 
        span.text Profile
      li.item: a(href="settings.html" class="link") 
        <i class="fa-solid fa-gear icon"></i> 
        span.text Settings
    ul.sidebar__list.bottom
      li.item.logout: a(href="/" class="link") 
        <i class="fa-solid fa-right-from-bracket icon"></i>
        span.text Logout 
      li.item.mode
        .mode__icon 
          <i class="fa-regular fa-moon moon__icon icon"></i>
        span.mode-text.text Dark mode
        .switch
          input(type="checkbox" class="checkbox" checked)
          span.slider
script(src="js/sidebar.js") 